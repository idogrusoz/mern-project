{
  "compilerOptions": {
    "target": "es5",                         
    "module": "commonjs",                    
    "lib": ["es6"],                          
    "allowJs": true,                         
    "outDir": "dist",                        
    "rootDir": "./",                         
    "strict": true,                          
    "noImplicitAny": true,                   
    "esModuleInterop": true,                 
    "resolveJsonModule": true,                
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "exclude": ["./node_modules", "./client"]
}
